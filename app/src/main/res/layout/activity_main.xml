<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/initTypeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/choose_init_type"
        android:textSize="14sp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/codeButton"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:text="@string/code"
        app:layout_constraintEnd_toStartOf="@id/xmlButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/initTypeTextView" />

    <Button
        android:id="@+id/xmlButton"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:text="@string/xml"
        app:layout_constraintStart_toEndOf="@id/codeButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/initTypeTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>
